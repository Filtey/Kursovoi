<Window x:Class="StoreSystem.Cashier.CashWindows.CheckForPrint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreSystem.Cashier.CashWindows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:local1="clr-namespace:StoreSystem.Classes"
        mc:Ignorable="d"
        Title="Invoice" 
        Height="600"
        Width="535.5"
       
        FontFamily="Roboto"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local1:MathConverterForPrint x:Key="MathConverter" />
    </Window.Resources>
    <ScrollViewer>
        <StackPanel>
            <Grid Visibility="Visible" x:Name="print">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="400"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal"
                            Margin="30" 
                            Grid.Row="0"
                            HorizontalAlignment="Center">

                    <TextBlock Text="ООО &quot;Спортмастер&quot;"
                               VerticalAlignment="Center"
                               FontSize="35"
                               FontWeight="Bold"
                               Foreground="#FFFBE188"
                               />
                </StackPanel>
                <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" Margin="20">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Дата покупки:" 
                                           FontSize="20" 
                                           x:Name="DateOrder"
                                           Margin="5"
                                           />
                                <TextBlock x:Name="Date"
                                           FontSize="20"
                                           Margin="5" 
                                           FontWeight="DemiBold"
                                           />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Чек №" 
                                           FontSize="12"
                                           Margin="5"
                                           />
                                <TextBlock x:Name="NumberCheck"
                                           FontSize="12"
                                           Margin="5"
                                           FontWeight="DemiBold"
                                           />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="0">
                            <TextBlock x:Name="CashierName" FontSize="12" Margin="5" HorizontalAlignment="Right"/>
                            <TextBlock Text="г. Екатеринбург, ул. 8 Марта, 46 (ТЦ Гринвич, этаж 2)" FontSize="12" Margin="5" HorizontalAlignment="Right"/>
                            <TextBlock x:Name="paymentIdentificator" TextWrapping="Wrap"  FontSize="11" Margin="0, 5, 5, 5" HorizontalAlignment="Right"/>
                           </StackPanel>
                    </Grid>

                    <Grid Margin="10 30 10 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ТОВАР" Grid.Column="0"
                                   FontSize="12"
                                   FontWeight="ExtraLight"
                                   />
                        <TextBlock Text="СТОИМОСТЬ (руб.)" 
                                   Grid.Column="1" 
                                   Margin="30, 0, 0, 0"
                                   FontSize="12" 
                                   FontWeight="ExtraLight" 
                                   />
                        <TextBlock Text="КОЛИЧЕСТВО"
                                   Grid.Column="2" 
                                   Margin="30, 0, 0, 0"
                                   FontSize="12" 
                                   FontWeight="ExtraLight" 
                                  />
                        <TextBlock Text="ИТОГО (руб.)"
                                   Grid.Column="3" 
                                   FontSize="12" 
                                   Margin="30, 0, 0, 0"
                                   FontWeight="ExtraLight" 
                                   />
                    </Grid>
                    <Rectangle Fill="Black"
                               Height="1" 
                               Margin="5 2" 
                               Opacity="0.5"
                               />
                    
                    <ListView
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        x:Name="listviewOrder"
                        >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Stretch" Margin="2" >

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding tovar.Name}" 
                                                   Grid.Column="0" 
                                                   Padding="0, 0, 1317, 0"
                                                   />
                                        <TextBlock Text="{Binding Price}" 
                                                   Grid.Column="1" 
                                                   Padding="0, 0, 2841, 0"
                                                   />
                                        <TextBlock Text="{Binding Count}" 
                                                   Grid.Column="2"
                                                   Padding="0, 0, 1021, 0"
                                                   />
                                        <TextBlock  Grid.Column="3" 
                                                    HorizontalAlignment="Right" 
                                                    Foreground="#FF62013C"
                                                    >
                                            <Run Text="{Binding Price,  Converter={StaticResource MathConverter}, ConverterParameter=price}" />
                                            <Run Text="{Binding Count,  Converter={StaticResource MathConverter}}" />
                                        </TextBlock>
                                </Grid>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="20 0">
                    <Grid Margin="10 20 10 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                                </Grid>
                    <Rectangle Fill="Black" Height="1" Margin="5" Opacity="0.5"/>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" 
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center">
                        
                            <TextBlock Text="ИТОГ"
                                       FontSize="20"
                                       FontWeight="Bold"
                                    />
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock x:Name="TotalPrice" FontSize="25" Margin="5" HorizontalAlignment="Right" Foreground="#FF62013C" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                    <Rectangle Fill="Black" Height="1" Margin="5" Opacity="0.5"/>

                    <Grid Margin="0 20" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Heart" Foreground="#FF62013C" Width="20" Height="20" Margin="5" VerticalAlignment="Center"/>
                            <TextBlock Text="Спасибо Вам!" VerticalAlignment="Center" FontSize="20" Margin="5" FontWeight="Light"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <TextBlock Text="erik89826502855@gmail.com" VerticalAlignment="Center" FontSize="8" Margin="5" FontWeight="Light"/>
                            <TextBlock Text="8 (800) 777-77-71" VerticalAlignment="Center" FontSize="8" Margin="5" FontWeight="Light"/>
                            <TextBlock Text="www.sportmaster.ru" VerticalAlignment="Center" FontSize="8" Margin="5" FontWeight="Light"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
           
            
            <StackPanel x:Name="printEquipment" Visibility="Collapsed">
                <Label Content="ООО &quot;СПОРТМАСТЕР&quot;"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       Margin="30, 30, 0, 0"/>

                <Label Content="г. Екатеринбург, ул. 8 Марта, 46 (ТЦ Гринвич, этаж 2)"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       Margin="30, 0, 0, 0"/>
                
                    <Label Content="ОТЧЁТ ОБ ОТКРЫТИИ СМЕНЫ"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Margin="30"/>

                <Label Content="cashier"
                       FontSize="24"
                       Margin="10"
                       x:Name="AccountLabel"/> 
                
                <Label Content="data"
                       FontSize="24"
                       Margin="10"
                       x:Name="DateLabel"/> 
                
                <Label Content="num"
                       FontSize="24"
                       Margin="10"
                       x:Name="NumberShiftLabel"/> 
                
                <Label Content="Связь с сервером....ОК"
                       FontSize="24"
                       Margin="10"/> 
                
                <Label Content="Проверка принтера....ОК"
                       FontSize="24"
                       Margin="10"/> 
                
                <Label Content="Проверка кассового оборудования....ОК"
                       FontSize="24"
                       Margin="10"/>
                
                <Label Content="Проверка устройств ввода....ОК"
                       FontSize="24"
                       Margin="10"/>


                <Label Content="Проверка устройств вывода...ОК"
                       FontSize="24"
                       Margin="10"/>
                
                <Label Content="***СМЕНА ОТКРЫТА***"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Margin="30"/>



            </StackPanel>

            <StackPanel x:Name="printCloseShift"
                        Visibility="Visible">
                <Label Content="ООО &quot;СПОРТМАСТЕР&quot;"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       Margin="30, 30, 0, 0"/>

                <Label Content="г. Екатеринбург, ул. 8 Марта, 46 (ТЦ Гринвич, этаж 2)"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       Margin="30, 0, 0, 0"/>

                <Label Content="ОТЧЁТ ОБ ЗАКРЫТИИ СМЕНЫ"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Margin="30"/>

                <Label Content="cashier"
                       FontSize="12"
                       Margin="10"
                       x:Name="Account1Label"/>

                <Label Content="data"
                       FontSize="12"
                       Margin="10"
                       x:Name="Date1Label"/>

                <Label Content="num"
                       FontSize="12"
                       Margin="10"
                       x:Name="NumberShift1Label"/>


                <Label Content="Количество товаров, по которым был произведен возврат безналичным расчетом (шт.):"
                       FontSize="12"
                       Margin="10"
                       x:Name="CountNalLabel"/>
                
                <Label Content="скок продал bezналом"
                       FontSize="12"
                       Margin="10"
                       x:Name="CountBeznalLabel"/> 
                
                <Label Content="сумма продал налом"
                       FontSize="12"
                       Margin="10"
                       x:Name="SummaNalLabel"/> 
                
                <Label Content="скок продал bezналом"
                       FontSize="12"
                       Margin="10"
                       x:Name="SummaBeznalLabel"/> 
                
                
                <Label Content="суммарное кол-во"
                       FontSize="12"
                       Margin="10"
                       x:Name="RezultCountLabel"/>
                
                
                <Label Content="итог сумма"
                       FontSize="12"
                       Margin="10"
                       x:Name="RezultSummaLabel"/> 
                
                
                <Label Content="скок возвратов налом"
                       FontSize="12"
                       Margin="10"
                       x:Name="RefundCountNalLabel"/>

                <Label Content="скок возвратов bezналом"
                       FontSize="12"
                       Margin="10"
                       x:Name="RefundCountBeznalLabel"/> 
                
                
                
                <Label Content="сумма возвратов налом"
                       FontSize="12"
                       Margin="10"
                       x:Name="RefundSummaNalLabel"/>

                <Label Content="сумма возвратов bezналом"
                       FontSize="12"
                       Margin="10"
                       x:Name="RefundSummaBeznalLabel"/> 
              
                
                
                
                <Label Content="сумма возвратов bezналом"
                       FontSize="12"
                       Margin="10"
                       x:Name="RefundSummaLabel"/>  
                
                <Label Content="сумма возвратов bezналом"
                       FontSize="12"
                       Margin="10"
                       x:Name="RefundCountLabel"/> 
                
                
                
                
                <Label Content="скок в кассе осталось"
                       FontSize="12"
                       Margin="10"
                       x:Name="RezultLabel"/> 
  


                <Label Content="***СМЕНА ЗАКРЫТА***"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Margin="30"/>



            </StackPanel>

        </StackPanel>
        
        
        
    </ScrollViewer>
</Window>