<Window x:Class="StoreSystem.Admin.Windows.MainAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreSystem.Admin.Windows"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="MainSkladnoi" Height="740" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"    
         Icon="/Images/Sporticon.ico"
        Style="{DynamicResource WindowStyle}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <!--левое меню-->
        <Border CornerRadius="10 0 0 10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#223266" Offset="0"/>
                    <GradientStop Color="#27396b" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>
                <!--username-->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0 35 0 0">

                    <Border CornerRadius="10"
                            Width="50"
                            Height="50">

                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="#7f7cf1" Offset="0"/>
                                <GradientStop Color="#d3b7ff" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <TextBlock x:Name="TbFamName"
                                   Foreground="#ffffff"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="1 0 0 2"/>

                    </Border>

                    <StackPanel Margin="10 0 0 0" VerticalAlignment="Center">
                        <TextBlock x:Name="FIOTb" 
                                   FontSize="15"
                                   Margin="0 0 0 5"
                                   Foreground="#c2cfff"/>
                    </StackPanel>

                </StackPanel>

                <Separator Height="0.8" 
                           Margin="20 30"
                           Background="#46558a"/>

                <!--кнопка меню-->
                <Button Style="{DynamicResource menuButtonActive}"
                        Margin="0 0 0 20" 
                        Click="MainPerexod"
                        x:Name="MainButton">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="UserGroup" Style="{DynamicResource menuButtonIcon}"/>
                        <TextBlock Text="Пользователи" Style="{DynamicResource menuButtonText}"/>
                    </StackPanel>
                </Button>

                <Button Style="{DynamicResource menuButton}"
                        Margin="0 0 0 20"
                        Click="AddPerexod"
                        x:Name="AddUserButton">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Add" Style="{DynamicResource menuButtonIcon}"/>
                        <TextBlock Text="Добавить пользователя" Style="{DynamicResource menuButtonText}"/>
                    </StackPanel>
                </Button>

                <Button Style="{DynamicResource menuButton}" Margin="0 380 0 0"
                        Click="Logout">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="SignOut" Style="{DynamicResource menuButtonIcon}"/>
                        <TextBlock Text="Выйти" Style="{DynamicResource menuButtonText}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>






        <!--главная секция-->
        <Border Grid.Column="1" CornerRadius="0 10 10 0" MouseDown="Border_MouseDown">
            <Border.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                    <GradientStop Color="#41518f" Offset="0"/>
                    <GradientStop Color="#2c386c" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Frame NavigationUIVisibility="Hidden" x:Name="frameContent">
            </Frame>
        </Border>

    </Grid>
</Window>
